---
import { path } from "../../utils/utils";

interface Props {
    title: string;
    href: string;
    label: string;
    theme: Theme;
    selected?: boolean;
    class?: string;
}

const { title, href, label, theme, selected = false, class: className } = Astro.props;
---

<a
    href={path(href)}
    aria-label={label}
    class:list={[
        "hidden px-4 py-2 after:mx-auto after:block after:h-0.5 after:w-0 after:transition-all after:duration-200 after:hover:w-full focus-visible:outline-none focus-visible:ring-2 focus-visible:after:w-full md:block",
        theme === "dark"
            ? "after:bg-white focus-visible:ring-white"
            : "after:bg-black focus-visible:ring-black",
        selected ? "after:w-full" : "after:w-0",
        className,
    ]}>
    {title}
</a>
