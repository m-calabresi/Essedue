---
interface Props {
    title: string;
    href: string;
    label: string;
    selected?: boolean;
    class?: string;
}

const { title, href, label, selected = false, class: className } = Astro.props;
---

<a
    href={href}
    aria-label={label}
    tabindex="-1"
    class:list={[
        "block px-8 py-4 after:mx-auto after:block after:h-0.5 after:bg-black after:transition-all after:duration-200 hover:after:w-full focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-1 focus-visible:outline-none focus-visible:after:w-full",
        selected ? "after:w-full" : "after:w-0",
        className,
    ]}>
    {title}
</a>
