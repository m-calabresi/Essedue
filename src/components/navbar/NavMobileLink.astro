---
import { path } from "../../utils/utils";

interface Props {
    title: string;
    href: string;
    selected?: boolean;
    class?: string;
}

const { title, href, selected = false, class: className } = Astro.props;
---

<a
    href={path(href)}
    tabindex="-1"
    class:list={[
        "block px-8 py-4 after:mx-auto after:block after:h-0.5 after:bg-black after:transition-all after:duration-200 after:hover:w-full focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-1 focus-visible:after:w-full",
        selected ? "after:w-full" : "after:w-0",
        className,
    ]}>
    {title}
</a>
