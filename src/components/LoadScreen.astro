---
import Logo from "./icons/Logo.astro";
---

<div
    id="load-screen"
    class="opacity-1 fixed left-0 top-0 z-50 grid h-full w-full animate-fade place-items-center bg-white">
    <Logo
        color="#000"
        invertedColor="#fff"
        class="inline-block h-20"
    />
</div>

<script>
    // remove load screen
    window.onload = () => {
        const loadScreen = document.getElementById("load-screen")!;
        loadScreen.classList.add("animate-fade");

        setTimeout(() => loadScreen.remove(), 400);
    };
</script>
