---
interface Props {
    title: string;
    content: string;
}

const { title, content } = Astro.props;
---

<>
    <meta
        property="og:url"
        content={import.meta.env.PUBLIC_SITE}
    />
    <meta
        property="og:type"
        content="website"
    />
    <meta
        property="og:title"
        content=`Arredi su misura, fatti a mano in Italia | ${import.meta.env.ESSEDUE_NAME} | ${title}`
    />
    <meta
        property="og:description"
        content={content}
    />
    <meta
        property="og:image"
        content={`${import.meta.env.PUBLIC_SITE}/og-banner.png`}
    />
</>
