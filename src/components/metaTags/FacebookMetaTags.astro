---
import { path } from "../../utils/utils";

interface Props {
    title: string;
    content: string;
}

const { title, content } = Astro.props;
---

<>
    <meta
        property="og:url"
        content={import.meta.env.PUBLIC_SITE}
    />
    <meta
        property="og:type"
        content="website"
    />
    <meta
        property="og:title"
        content=`Arredi su misura, fatti a mano in Italia | Essedue Arredi | ${title}`
    />
    <meta
        property="og:description"
        content={content}
    />
    <meta
        property="og:image"
        content={`${import.meta.env.PUBLIC_SITE}${path("/og-banner.png")}`}
    />
</>
