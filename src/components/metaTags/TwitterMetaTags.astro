---
interface Props {
    title: string;
    content: string;
}

const { title, content } = Astro.props;
---

<>
    <meta
        name="twitter:card"
        content="summary_large_image"
    />
    <meta
        property="twitter:domain"
        content="essedue-arredi.it"
    />
    <meta
        property="twitter:url"
        content={import.meta.env.PUBLIC_SITE}
    />
    <meta
        name="twitter:title"
        content=`Arredi su misura, fatti a mano in Italia | ${import.meta.env.ESSEDUE_NAME} | ${title}`
    />
    <meta
        name="twitter:description"
        content={content}
    />
    <meta
        name="twitter:image"
        content={`${import.meta.env.PUBLIC_SITE}/og-banner.png`}
    />
</>
