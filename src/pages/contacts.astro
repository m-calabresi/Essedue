---
import { Image } from "astro:assets";

import PageLayout from "../layouts/PageLayout.astro";

import banner from "../assets/contacts-header-lg.jpg";
---

<PageLayout
    title="Contatti"
    selectedItem="contacts">
    <div class="grid place-items-center grid-template-areas-stack">
        <div class="grid w-full grid-template-areas-stack bg-gradient-black-semitransparent-left">
            <Image
                src={banner}
                alt=""
                class="h-52 w-full object-cover object-bottom grayscale grid-area-stack -z-1 sm:h-72"
                loading={"eager"}
            />
            <div class="z-20 justify-self-start pb-8 pl-8 text-white grid-area-stack self-grid-end">
                <h1 class="text-4xl font-black uppercase tracking-tight sm:text-5xl">contattaci</h1>
                <span class="inline-block">
                    Preventivi su misura, che si adattano<br />alle tue esigenze.
                </span>
            </div>
        </div>
    </div>
    <main
        class="mx-auto my-28 grid w-full max-w-7xl grid-cols-1 grid-rows-2 items-center justify-center gap-16 lg:grid-cols-5 lg:grid-rows-1 lg:gap-4">
        <section
            class="flex flex-col gap-16 px-8 text-start text-lg capitalize text-black lg:col-span-2 lg:pr-0">
            <div class="flex flex-col gap-2">
                <h3 class="font-bold">sede</h3>
                <address class="not-italic">via alessandro manzoni 22B, carugo (co)</address>
            </div>
            <div class="flex flex-col gap-2">
                <h3 class="font-bold">orari</h3>
                <div class="grid grid-cols-2">
                    <span class="row-span-2">lun - ven</span>
                    <span>
                        <time datetime="8:00">08:00</time> - <time datetime="12:00">12:00</time>
                    </span>
                    <span>
                        <time datetime="14:00">&nbsp14:00</time> - <time datetime="18:00">18:00</time>
                    </span>
                </div>
            </div>
            <div class="flex flex-col gap-2">
                <h3 class="font-bold">telefono</h3>
                <address class="grid grid-cols-2 not-italic">
                    <span>+39 339 4690 597</span>
                    <span>ferdinando</span>
                    <span>+39 349 6515 751</span>
                    <span>stefano</span>
                </address>
            </div>
            <div class="flex flex-col gap-2">
                <h3 class="font-bold">email</h3>
                <address class="not-italic">info@essedue-arredi.it</address>
            </div>
        </section>
        <section class="w-full lg:col-span-3 lg:h-full lg:pr-8">
            <iframe
                class="h-96 w-full lg:h-full"
                id="gmap_canvas"
                src="https://maps.google.com/maps?q=Via%20Alessandro%20Manzoni%2022B,%20Carugo%20(CO)&t=&z=17&ie=UTF8&iwloc=&output=embed&z=14"
                allowfullscreen="true"
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
        </section>
    </main>
</PageLayout>
